{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "methods": ["OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://playjogosgratis.com",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      },
      "status": 200
    },
    { "src": "/score",   "dest": "/api/index.js" },
    { "src": "/ranking", "dest": "/api/index.js" },
    { "src": "/",        "dest": "/api/index.js" }
  ]
}
